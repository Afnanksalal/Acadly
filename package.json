{
  "name": "acadly",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit --incremental",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "echo \"No tests specified\" && exit 0",
    "analyze": "ANALYZE=true npm run build",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force .next, out, dist, build -ErrorAction SilentlyContinue\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.cjs",
    "prisma:reset": "prisma migrate reset",
    "prisma:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "npm run prisma:seed",
    "vercel-build": "prisma generate && next build",
    "deploy:preview": "vercel",
    "deploy:production": "npm run pre-deploy && vercel --prod",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "cleanup": "curl -X GET \"$VERCEL_URL/api/cron/cleanup\" -H \"Authorization: Bearer $CRON_SECRET\"",
    "postinstall": "prisma generate",
    "precommit": "npm run lint:check && npm run type-check && npm run format:check",
    "env:validate": "node scripts/validate-env.js",
    "pre-deploy": "npm run lint:check && npm run type-check",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "security:audit": "npm audit --audit-level moderate",
    "deps:update": "npm update && npm audit fix"
  },

  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.3.0",
    "@supabase/supabase-js": "^2.45.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/validator": "^13.15.4",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.6",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "express-rate-limit": "^8.2.0",
    "helmet": "^8.1.0",
    "jsdom": "^27.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "^14.2.5",
    "postcss": "^8.4.41",
    "prisma": "^6.18.0",
    "razorpay": "^2.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.3.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "validator": "^13.15.20",
    "zod": "^3.23.8"
  }
}
